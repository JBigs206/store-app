@model IEnumerable<StoreWebApp.Models.ProductModel>
<div class="mt-20">
    <h5>More to Explore</h5>
    <hr />
</div>
<div class="card-columns mt-20">
    @foreach (var item in Model)
    {
        <div class="card">
            <a href="../../../Product/Index?Id=@item.Id">
                <div class="card-img-container">
                    <img class="card-img-top bs-card-img" src=@item.Image alt="@item.Title">
                </div>
                <div class="card-body">
                    <p class="card-text">@item.Description</p>
                </div>
            </a>
        </div>
    }
</div>
